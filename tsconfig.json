{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "files": [
    "index.ts",
    "extensions.ts",
    "types.ts",
    "viem-contract.ts",
    "type-utils.ts",
    "redstone/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./redstone/mocks.ts",
    "./redstone/test.ts",
    "test"
  ]
}
