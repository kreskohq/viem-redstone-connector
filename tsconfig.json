{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "files": ["index.ts", "types.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "./redstone/mocks.ts",
    "./redstone/test.ts",
    "test"
  ]
}
